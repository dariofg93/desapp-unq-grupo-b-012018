<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Web Client Application</display-name>
  <description>Web Client Application</description>

  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/resources/META-INF/spring-application-context.xml</param-value>
  </context-param>
  
  <context-param>
    <param-name>persistenceConfigurationLocation</param-name>
    <param-value>/resources/META-INF/spring-persistence-context.xml</param-value>
  </context-param>
  
  <context-param>
    <param-name>serviceConfigLocation</param-name>
   <param-value>/resources/META-INF/spring-service-context.xml</param-value>
  </context-param>
  
  <listener>
    <listener-class>
      org.springframework.web.context.ContextLoaderListener
    </listener-class>
  </listener>

  <servlet>
    <servlet-name>CXFServlet</servlet-name>
    <servlet-class>org.apache.cxf.transport.servlet.CXFServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>CXFServlet</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>

</web-app>
