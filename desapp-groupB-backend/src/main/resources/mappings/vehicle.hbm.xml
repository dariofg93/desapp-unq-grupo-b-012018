<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-cascade="save-update">
	<class name="model.vehicle.Vehicle" table="VEHICLES">

		<id column="id_vehicle" name="id" type="java.lang.Long">
			<generator class="increment" />
		</id>
		
		<many-to-one name="owner" column="id_user" not-null = "false"
			class="model.user.User" unique="false" lazy="false" />
		
		<property name="description" type="string" column="DESCRIPTION" />
			
		<property name="passengerCapacity" type="integer" column="PASSAGER_CAPACITY" />
		
		<property name="category" lazy="false">
			<column name="CATEGORY" />
			<type name="model.vehicle.Vehicle" />
		</property>
		

	</class>
</hibernate-mapping>